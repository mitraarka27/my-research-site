---
import { SITE } from "../config";
const cover = SITE.images.og || "https://placehold.co/1200x250/374151/ffffff?text=Atmospheric+Science+Visualization";
const avatar = SITE.images.avatar || "https://placehold.co/150x150/1e40af/ffffff?text=AM";
---
<section id="hero" class="relative pt-16">
  <!-- Cover -->
  <div class="h-48 sm:h-64 w-full bg-gray-300"
       style={`background-image:url('${cover}'); background-size:cover; background-position:center;`}>
  </div>

  <!-- Name block overlapping cover -->
  <div class="container-x -mt-16 sm:-mt-24">
    <div class="flex flex-col sm:flex-row items-start sm:items-end">
      <img id="profile-image"
           class="h-28 w-28 sm:h-36 sm:w-36 rounded-full border-4 border-white shadow-xl object-cover bg-white"
           src={avatar}
           alt="Profile Image" />
      <div class="sm:ml-6 mt-4 sm:mt-0 pb-4">
        <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900">Arka Mitra, Ph.D.</h1>
        <p class="text-xl text-blue-600 font-medium mt-1">
          Atmospheric Scientist & Remote Sensing Expert | Argonne National Laboratory
        </p>
      </div>
      <div class="sm:ml-auto mt-4 sm:mt-0 pb-4">
        <a href="/resume.pdf" class="btn-primary">Download Resume</a>
      </div>
    </div>
  </div>
</section>
